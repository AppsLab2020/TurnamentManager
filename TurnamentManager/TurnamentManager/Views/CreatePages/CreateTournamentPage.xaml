<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="http://xamarin.com/schemas/2020/toolkit"
             x:Class="TurnamentManager.Views.CreateTournamentPage">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout Margin="10">
           
            <views:Expander>
                <views:Expander.Header>
                    <Grid>
                        <Image Source="trophy.png" BackgroundColor="Transparent" />
                    </Grid> 
                </views:Expander.Header> 
                <Grid ColumnDefinitions="33.33*,33.33*,33.33*" ColumnSpacing="0">
                    <ImageButton HorizontalOptions="CenterAndExpand" HeightRequest="150" 
                                 Grid.Column="0"
                                 Source="trophy.png" 
                                 BackgroundColor="Transparent"/> 
                    <ImageButton HorizontalOptions="CenterAndExpand" HeightRequest="150" 
                                 Grid.Column="1" 
                                 Source="silver_trophy.png"
                                 BackgroundColor="Transparent"/> 
                    <ImageButton Source="bronze_trophy.png"
                                 HorizontalOptions="CenterAndExpand" HeightRequest="150" 
                                 Grid.Column="2"
                                 BackgroundColor="Transparent"/>
                </Grid>
            </views:Expander>

            <Label Text="Tournament Name" HorizontalOptions="Center" />

            <Entry Placeholder="Tournament1"
                   Text="{Binding Name, Mode=OneWayToSource}"
                   HorizontalTextAlignment="Center" />
            
            
            
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                
                <Label Text="Choose Sport" HorizontalOptions="Center" />
                <views:Expander>
                    <views:Expander.Header>
                        <Grid>
                            <Image Source="football_ball.png" HeightRequest="80" BackgroundColor="Transparent" />
                        </Grid> 
                    </views:Expander.Header> 
                    <Grid ColumnDefinitions="33.33*,33.33*,33.33*,33.33*" ColumnSpacing="2" Margin="3,0" >
                        <ImageButton HorizontalOptions="CenterAndExpand" HeightRequest="80" 
                                     Grid.Column="0"
                                     Source="tennis_ball.png" 
                                     BackgroundColor="Transparent"/>
                        
                        <ImageButton HorizontalOptions="CenterAndExpand" HeightRequest="80" 
                                     Grid.Column="1" 
                                     Source="basket_ball.png"
                                     BackgroundColor="Transparent"/>
                        
                        <ImageButton Source="football_ball.png"
                                     HorizontalOptions="CenterAndExpand" HeightRequest="80" 
                                     Grid.Column="2"
                                     BackgroundColor="Transparent"/>
                        
                        <ImageButton Source="table_football.png"
                                     HorizontalOptions="CenterAndExpand" HeightRequest="80" 
                                     Grid.Column="3"
                                     BackgroundColor="Transparent"/>
                    </Grid>
                </views:Expander>
            </StackLayout>
            <BoxView HeightRequest="1"
                     BackgroundColor="Black"
                     HorizontalOptions="FillAndExpand"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="0,4">

                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    
                    <Label Text="Choose Format" HorizontalOptions="Center" />
                    <views:Expander>
                        <views:Expander.Header>
                            <Grid>
                                <Image VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Source="Knockout.png" HeightRequest="80"/>
                            </Grid>
                        </views:Expander.Header>
                        <Grid ColumnDefinitions="33.33*" ColumnSpacing="2">
                            <ImageButton Source="Knockout.png"
                                         HorizontalOptions="CenterAndExpand" HeightRequest="80" 
                                         Grid.Column="0"
                                         BackgroundColor="Transparent"/>
                        </Grid>
                    </views:Expander>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                    <Label Text="Select Teams or Players"
                           HorizontalOptions="Center" />

                    <views:Expander>
                        <views:Expander.Header>
                            <Grid>
                                <Image  Source="player_icon.png" BackgroundColor="Transparent" HeightRequest="60"/>
                            </Grid> 
                        </views:Expander.Header> 
                        
                        <Grid ColumnDefinitions="33.33*,33.33*" ColumnSpacing="0">
                            <ImageButton HorizontalOptions="CenterAndExpand" 
                                         Grid.Column="0"
                                         Source="team_iconn.png" 
                                         BackgroundColor="Transparent"
                                         HeightRequest="60"/> 
                            
                            <ImageButton HorizontalOptions="CenterAndExpand"
                                         Grid.Column="1" 
                                         Source="player_icon.png"
                                         BackgroundColor="Transparent"
                                         HeightRequest="60"/> 
                        </Grid>
                    </views:Expander>
                </StackLayout>

            </StackLayout>

           
            <StackLayout Orientation="Horizontal" VerticalOptions="End">
                <ImageButton x:Name="SaveButton"
                             Source="save_bigger"
                             Command="{Binding SaveDataCommand}"
                             BackgroundColor="Transparent"
                             HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>