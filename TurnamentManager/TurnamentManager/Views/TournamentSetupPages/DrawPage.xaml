<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurnamentManager.Views.DrawPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <StackLayout x:Name="Layout" Padding="30"/>
            <ImageButton x:Name="RandomButton"
                         Source="random_button.png"
                         BackgroundColor="Transparent"
                         VerticalOptions="CenterAndExpand"
                         HorizontalOptions="CenterAndExpand"/>
            <ImageButton x:Name="ManualButton"
                         Source="manual_button.png"
                         BackgroundColor="Transparent"
                         VerticalOptions="CenterAndExpand"
                         HorizontalOptions="CenterAndExpand"
                         Command="{Binding NavigateCommand}"/>
            <ImageButton x:Name="SaveButton"
                         Source="save_bigger.png"
                         BackgroundColor="Transparent"
                         HorizontalOptions="CenterAndExpand"
                         Clicked="SaveButton_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>