<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurnamentManager.Views.TournamentSetupPages.RandomPage">
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand" Orientation="Vertical" BackgroundColor="White">

            <StackLayout x:Name="StackLayout"
                         HorizontalOptions="Fill"
                         HeightRequest="400">
                
                <StackLayout x:Name="FrameLayout"
                             HeightRequest="0" />

                <StackLayout Margin="0">
                    <ImageButton
                        x:Name="Button"
                        Source="done_button.png"
                        HorizontalOptions="CenterAndExpand"
                        BackgroundColor="Transparent"
                        Command="{Binding RedrawCommand}" />

                    <ImageButton
                        x:Name="Button2"
                        Source="done_button.png"
                        HorizontalOptions="CenterAndExpand"
                        BackgroundColor="Transparent"
                        Command="{Binding NavigateToNextCommand}" />

                </StackLayout>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>