<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TurnamentManager.Views.CreateTeamPage">
    
    <ContentPage.Content>
        <StackLayout>
           <Image Source="team_pix.jpg"></Image>
            <Label Text="Team Name"></Label>
            <Entry Placeholder="Team1"></Entry>
            <Label HorizontalOptions="CenterAndExpand" Text="Players In Team:" />
            <ListView  x:Name="PlayersDisplay"
                       MinimumWidthRequest="0"
                       ItemsSource="{Binding PlayerNamesCollection}"></ListView>
            <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
                <ImageButton Source="add_player"
                             BackgroundColor="Transparent"
                             Command="{Binding AddPlayerCommand}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="End">
                <ImageButton Source="save_bigger"
                             x:Name="SaveButton"
                             Clicked="SaveButton_OnClicked"
                             BackgroundColor="Transparent"
                             HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>