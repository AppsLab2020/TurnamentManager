<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs;assembly=XLabs.Forms"
             xmlns:controls1="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="TurnamentManager.Views.PlayerOrTeamAddPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
          <Label Text="Add Players" FontSize="Large"
                 VerticalOptions="Center"
                 HorizontalOptions="Center"></Label>
            <StackLayout VerticalOptions="End">
                <StackLayout x:Name="Players"></StackLayout>
                <Button x:Name="SaveButton"
                        Text="Next"
                        TextColor="White"
                        BackgroundColor="DodgerBlue"
                        HorizontalOptions="CenterAndExpand"
                        CornerRadius="5"
                        BorderWidth="2"
                        Clicked="SaveButton_OnClicked">
                </Button>
            </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>